\@addtoplength{firstfoothpos}{1em}
\setkomavar{firstfoot}{%
  \fontsize{7}{8}\sffamily
  \begin{picture}(0,0)%
    \put(0,0){\parbox[t]{\useplength{infocolwidth}}{%
	\color{gray}
        \raggedright
        \vspace{-15.5em}%
        %\includegraphics[width=\useplength{infocolwidth}]{logo-25y-thd}
