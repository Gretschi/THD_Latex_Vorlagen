        }\\%[\baselineskip]
        \usekomavar{fromaddress}\\
        \vspace{1em}%
        \usekomavar{fromphone}
        \vspace{.3em}%

        \usekomavar[\url]{fromurl}%
      }%
    }%
  \end{picture}%
  \hspace*{\useplength{infocolwidth}}%
}%

